{
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "eslint.options": {
    "useEslintrc": false,
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "es6": true
    }
  },
  "rules": {
    "@typescript-eslint/strict-boolean-expressions": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error"
  }
}